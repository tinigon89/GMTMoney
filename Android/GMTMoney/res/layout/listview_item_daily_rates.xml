<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="60dip"
    android:layout_marginTop="1dp"
    android:background="@drawable/daily_rate_bg_cell"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/daily_rates_item_img"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"/>

    <RelativeLayout
        android:id="@+id/btn_song_info"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="75dp" >

        <TextView
            android:id="@+id/daily_rates_item_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/daily_rates_item_title"
            android:gravity="left"
            android:singleLine="true"
            android:text="Info"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/daily_rates_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="left"
            android:singleLine="true"
            android:textColor="#000000"
            android:text="Title"
            android:textSize="20dp"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/daily_rates_item_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:textColor="#000000"
            android:text="1235"
            android:textSize="20dp" 
            android:layout_marginRight="10dp"
            android:textStyle="bold"/>
    </RelativeLayout>

</RelativeLayout>